<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/name_column"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/name_column_hint"
        android:inputType="textNoSuggestions"
        android:maxLength="64"/>

    <EditText
        android:id="@+id/destination_column"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/destination_column_hint"
        android:inputType="textMultiLine"
        android:maxLength="256"/>

    <EditText
        android:id="@+id/date_column"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/date_column_hint"
        android:inputType="number"
        android:maxLength="9"/>

    <EditText
        android:id="@+id/risk_assessment_column"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/risk_assessment_column_hint"
        android:inputType="textNoSuggestions"
        android:maxLength="64"/>

    <EditText
        android:id="@+id/description_column"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/description_column_hint"
        android:inputType="textMultiLine"
        android:maxLength="256"/>

    <EditText
        android:id="@+id/duration_column"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/duration_column_hint"
        android:inputType="number"
        android:maxLength="9"/>

    <EditText
        android:id="@+id/aim_column"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/aim_column_hint"
        android:inputType="textNoSuggestions"
        android:maxLength="64"/>

    <EditText
        android:id="@+id/status_column"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/status_column_hint"
        android:inputType="textMultiLine"
        android:maxLength="256"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/go_back_trip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@android:drawable/ic_menu_save"
            android:drawableStart="@android:drawable/ic_menu_save"
            android:text="@string/go_back_trip_button"/>

        <Button
            android:id="@+id/save_trip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@android:drawable/ic_menu_save"
            android:drawableStart="@android:drawable/ic_menu_save"
            android:text="@string/save_trip_button"/>
    </LinearLayout>

</LinearLayout>
